<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>EchoNet - Mensagens</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/global.css">
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/sidebar.css">
  <link rel="stylesheet" href="/css/responsive.css">
  <link rel="stylesheet" href="/css/chat.css">
  <style>
    body {
      display: flex;
    }
    .lista-contatos {
      width: 200px;
      padding: 20px;
      background: #f9f9f9;
      height: 100vh;
      overflow-y: auto;
      box-shadow: 2px 0 4px rgba(0,0,0,0.05);
    }
    .lista-contatos ul {
      list-style: none;
      padding: 0;
    }
    .lista-contatos li {
      margin-bottom: 10px;
    }
    .lista-contatos a {
      text-decoration: none;
      color: #333;
      font-weight: bold;
    }
    .mensagem-container {
      flex: 1;
      display: flex;
      flex-direction: column;
      padding: 20px;
    }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="logo">EchoNet</div>
    <nav>
      <a href="/">Página Inicial</a>
      <a href="/perfil">Perfil</a>
      <a href="/logout">Sair</a>
      <a href="/mensagens">Mensagens</a>
    </nav>
  </div>

  <div class="lista-contatos" id="listaContatos">
  <h3>Contatos</h3>

  <!-- Teste: Exibe os dados brutos dos contatos -->
  <pre style="font-size: 11px; color: gray;"><%= JSON.stringify(contatos, null, 2) %></pre>

  <ul>
    <% if (contatos.length === 0) { %>
      <li style="color: #888;">Nenhum contato encontrado</li>
    <% } else { %>
      <% contatos.forEach(c => {
        if (c.contato.trim().toLowerCase() !== usuarioLogado.trim().toLowerCase()) { %>
        <li>
          <a href="/mensagens/<%= encodeURIComponent(c.contato) %>">
            <%= c.contato %>
          </a>
        </li>
      <% }}); %>
    <% } %>
  </ul>
</div>

  <!-- Mensagem / Chat -->
  <% if (destinatario) { %>
    <div class="mensagem-container">
      <div class="mensagem-topo">Conversando com: <%= destinatario %></div>

      <div class="chat-box" id="chatBox">
        <% mensagens.forEach(m => { %>
          <div class="msg <%= m.remetente === usuarioLogado ? 'eu' : 'outro' %>">
            <%= m.conteudo %>
          </div>
        <% }) %>
      </div>

      <form id="formMensagem" class="form-mensagem">
        <input type="hidden" name="destinatario" value="<%= destinatario %>">
        <input type="text" name="conteudo" placeholder="Digite sua mensagem..." required autocomplete="off">
        <button type="submit">Enviar</button>
      </form>
    </div>
  <% } else { %>
    <div class="mensagem-container">
      <div class="mensagem-topo">Mensagens</div>
      <div class="chat-box">
        <p style="margin: auto; font-size: 16px; color: #888;">
          Selecione um contato à esquerda para iniciar uma conversa.
        </p>
      </div>
    </div>
  <% } %>

  <script>
    const chatBox = document.getElementById("chatBox");
    const form = document.getElementById("formMensagem");

    if (chatBox && form) {
      const destinatario = "<%= destinatario %>";

      function scrollParaFim() {
        chatBox.scrollTop = chatBox.scrollHeight;
      }

      async function carregarMensagens() {
        const res = await fetch("/mensagens/" + encodeURIComponent(destinatario), {
          credentials: "include"
        });
        const html = await res.text();
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, "text/html");
        const novasMsgs = doc.getElementById("chatBox").innerHTML;
        chatBox.innerHTML = novasMsgs;
        scrollParaFim();
      }

      form.addEventListener("submit", async e => {
        e.preventDefault();

        const conteudo = form.querySelector("input[name='conteudo']").value.trim();
        if (!conteudo) return;

        await fetch("/mensagens", {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify({ destinatario, conteudo }),
          credentials: "include"
        });

        form.reset();
        await carregarMensagens();
        scrollParaFim();
      });

      scrollParaFim();
      setInterval(carregarMensagens, 5000);
    }
  </script>
</body>
</html>