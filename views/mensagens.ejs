<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>EchoNet - Mensagens</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/global.css">
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/sidebar.css">
  <link rel="stylesheet" href="/css/responsive.css">
  <link rel="stylesheet" href="/css/chat.css">
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="logo">EchoNet</div>
    <nav>
      <a href="/">PÃ¡gina Inicial</a>
      <a href="/perfil">Perfil</a>
      <a href="/logout">Sair</a>
      <a href="/mensagens/<%= usuarioLogado %>">Mensagens</a>
    </nav>
  </div>

  <!-- Container de Mensagem -->
  <div class="mensagem-container">
    <div class="mensagem-topo">Conversando com: <%= destinatario %></div>

    <div class="chat-box" id="chatBox">
      <% mensagens.forEach(m => { %>
        <div class="msg <%= m.remetente === usuarioLogado ? 'eu' : 'outro' %>">
          <%= m.conteudo %>
        </div>
      <% }) %>
    </div>

    <form id="formMensagem" class="form-mensagem">
      <input type="hidden" name="destinatario" value="<%= destinatario %>">
      <input type="text" name="conteudo" placeholder="Digite sua mensagem..." required autocomplete="off">
      <button type="submit">Enviar</button>
    </form>
  </div>

  <script>
    const chatBox = document.getElementById("chatBox");
    const form = document.getElementById("formMensagem");
    const destinatario = "<%= destinatario %>";

    // Scroll para o final
    function scrollParaFim() {
      chatBox.scrollTop = chatBox.scrollHeight;
    }

    scrollParaFim();

    // Enviar mensagem via fetch
    form.addEventListener("submit", async e => {
      e.preventDefault();
      const formData = new FormData(form);
      const conteudo = formData.get("conteudo").trim();
      if (!conteudo) return;

      await fetch("/mensagens", {
        method: "POST",
        body: formData,
        credentials: "include"
      });

      form.reset();
      await carregarMensagens();
      scrollParaFim();
    });

    // Buscar mensagens novas
    async function carregarMensagens() {
      const res = await fetch("/mensagens/" + encodeURIComponent(destinatario), {
        credentials: "include"
      });
      const html = await res.text();
      const parser = new DOMParser();
      const doc = parser.parseFromString(html, "text/html");
      const novasMsgs = doc.getElementById("chatBox").innerHTML;
      document.getElementById("chatBox").innerHTML = novasMsgs;
      scrollParaFim();
    }

    // Atualiza a cada 5 segundos
    setInterval(carregarMensagens, 5000);
  </script>
</body>
</html>